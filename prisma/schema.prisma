// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Álbumes (organizados por años, permite múltiples álbumes por año)
model Album {
  id              String    @id @default(cuid())
  year            Int
  title           String
  description     String?
  subAlbum        String?   // Nombre de categoría (sincronizado desde category.name)
  categoryId      String?   // FK a Category
  category        Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  coverImageUrl   String?
  coverFocalPoint String?   // "x,y" porcentajes, ej: "45,30"
  eventDate       DateTime? // Fecha real en que se tomaron las fotos
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relación con imágenes
  images          Image[]

  // Índices para optimizar queries
  @@unique([year, title, subAlbum]) // Evitar duplicados
  @@index([year])
  @@index([categoryId])
  @@index([createdAt])
  @@map("albums")
}

// Categorías predefinidas para álbumes
model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  albums    Album[]

  @@map("categories")
}

// Portada de año (fija una imagen con focal point para la tarjeta del año en home)
model YearCover {
  year            Int      @id
  coverImageUrl   String?
  coverFocalPoint String?
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("year_covers")
}

// Modelo de Imágenes
model Image {
  id              String   @id @default(cuid())
  albumId         String?
  filename        String
  originalName    String
  fileUrl         String
  thumbnailUrl    String?
  fileSize        Int
  width           Int
  height          Int
  mimeType        String
  description     String?
  blurDataUrl     String?
  uploadedAt      DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relación con álbum
  album           Album?   @relation(fields: [albumId], references: [id], onDelete: Cascade)

  // Índices para optimizar queries frecuentes
  @@index([albumId])
  @@index([uploadedAt])
  @@index([albumId, uploadedAt])
  @@map("images")
}
