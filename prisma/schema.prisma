// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Álbumes (organizados por años, permite múltiples álbumes por año)
model Album {
  id              String   @id @default(cuid())
  year            Int
  title           String
  description     String?
  subAlbum        String?  // Categoría o sub-álbum (ej: "Vacaciones", "Eventos")
  coverImageUrl   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relación con imágenes
  images          Image[]

  // Índices para optimizar queries
  @@unique([year, title, subAlbum]) // Evitar duplicados
  @@index([year])
  @@index([createdAt])
  @@map("albums")
}

// Modelo de Imágenes
model Image {
  id              String   @id @default(cuid())
  albumId         String?
  filename        String
  originalName    String
  fileUrl         String
  thumbnailUrl    String?
  fileSize        Int
  width           Int
  height          Int
  mimeType        String
  description     String?
  blurDataUrl     String?
  uploadedAt      DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relación con álbum
  album           Album?   @relation(fields: [albumId], references: [id], onDelete: Cascade)

  // Índices para optimizar queries frecuentes
  @@index([albumId])
  @@index([uploadedAt])
  @@index([albumId, uploadedAt])
  @@map("images")
}
